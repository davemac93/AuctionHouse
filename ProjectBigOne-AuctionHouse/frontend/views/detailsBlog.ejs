        <link rel="stylesheet" href="../css/style.css">
    </head>
<body id="bodyBlog">
    <header>
        <%- include('./partials/nav.ejs', { loggedIn: loggedIn }) %>
    </header>

    <div class="blog-details">
            <h1 id="blogTitle"><%= blog.title %></h1>
