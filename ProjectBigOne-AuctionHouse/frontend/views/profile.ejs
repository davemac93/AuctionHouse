<!-- profile.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/css/style.css" rel="stylesheet" type="text/css">  
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700;800;900&family=Rubik+Mono+One&display=swap" rel="stylesheet">
    <title>User Profile</title>
</head>
<body class="profileBody">
    <header>
        <%- include('./partials/nav.ejs', { loggedIn: loggedIn }) %>
    </header>
    <div class="profile-container">
        <div class="left-panel">
            <!-- Left panel content -->
            <div class="profile-info">
                <img src="../img/face.jpg" class="profile-image">
                <h2>User Profile</h2>
                <p><span>Name:</span> <%= user.name %></p>
                <p><span>Lastname:</span> <%= user.lastname %></p>
                <p><span>Email:</span> <%= user.email %></p>
            </div>
            <div class="buttonUpdate">
                <button>Update</button>
            </div>
        </div>
        <div class="right-panel">
            <!-- Right panel content -->
            <div class="sub-panel">
                <% if(user._id.toString() === '661851d28546736546d73758') { %>
                    <!-- Display add car and add blog post buttons for specific user -->
                    <h2>Actions</h2>
                    <div class="button-container">
                        <button onclick="window.location.href='/add-car'">Add Car</button>
                        <button onclick="window.location.href='/add-blog'">Add Blog Post</button>
                    </div>
                <% } else { %>
                    <!-- Default display for other users -->
                    <h2>Your Auction</h2>
                    <p>Name: <%= user.name %></p>
                    <p>Lastname: <%= user.lastname %></p>
                    <p>Email: <%= user.email %></p>
                <% } %>
                
            </div>
            <div class="sub-panel sub-panel-bot">
                <% if(user._id.toString() === '661851d28546736546d73758') { %>
                    <h2>Admin favorit car</h2>
                    <div id="car-container"></div>
                    <script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r128/three.min.js"></script>
                    <script src="https://cdn.jsdelivr.net/npm/three-gltf-loader"></script>
                    <script src="../js/carAnimation.js"></script>
                <% } else { %>
                    <h2>More Details</h2>
                    <form action="/update-details" method="POST">
                        <label for="phone">Phone Number:</label>
                        <input type="text" id="phone" name="phone" placeholder="Enter your phone number" required>

                        <label for="address">Address:</label>
                        <input type="text" id="address" name="address" placeholder="Enter your address" required>

                        <label for="cars">Number of Owned Cars:</label>
                        <input type="number" id="cars" name="cars" placeholder="Enter the number of owned cars" required>

                        <button type="submit">Update</button>
                    </form>
                <% } %>
            </div>
            
            
        </div>
    </div>
</body>
</html>
