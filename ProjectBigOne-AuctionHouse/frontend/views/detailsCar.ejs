<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
        <link rel="stylesheet" href="../css/style.css">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700;800;900&family=Rubik+Mono+One&display=swap" rel="stylesheet">
        <script src="../js/dateFormatter.js"></script>
        <title>Blog Details</title>
    </head>
<body >
    <header>
        <%- include('./partials/nav.ejs', { loggedIn: loggedIn }) %>
        <% function formatDate(date) { %>
            <% return new Date(date).toLocaleTimeString() + ', ' + new Date(date).toLocaleDateString(); %>
        <% } %>
    </header>
    <div class="heroCar">
        <div class="carPhoto">
            <img src="../<%= car.imagePaths[0] %>" alt="Blog Image"> <!-- Assuming you have one image -->
        </div>
        <div class="middelSectionCar">
            <div class="carInfo">
                <h2><%= car.make %> <%= car.model %></h2>
                <p>Starting price: <%= car.startingPrice %></p>
            </div>
            <div class="carInfoButton">
                <button><a href="../reg-log">REGISTER TO BID</a></button>
                <button><a href="../collection">AVAILABLE LOTS</a></button>
            </div>
         
        </div>
            <p id="detailsCarP">Details</p>
        <div class="buttonSectionCar">
            <ul class="ulDetailsTop">
                <li>Year: <%= car.year %></li>
                <li>Mileage: <%= car.mileage %></li>
                <li>Auction End at: <%= formatDate(car.auctionEnd) %></li>
            </ul>
            <ul class="ulDetailsButton">
                <li>Text to added about the car</li>
                <li>Text to added about the car</li>
                <li>Text to added about the car</li>
            </ul>
        </div>
        <div class="detailsPhoto">
            <div class="box" id="mainPhoto"><img src="../<%= car.imagePaths[1] %>" alt="Blog Image"></div> <!-- Assuming you have one image -->
            <div class="box" id="box1"><img src="../<%= car.imagePaths[2] %>" alt="Blog Image"></div> 
            <div class="box" id="box2"><img src="../<%= car.imagePaths[3] %>" alt="Blog Image"></div> 
            <div class="box" id="box3"><img src="../<%= car.imagePaths[4] %>" alt="Blog Image"></div> 
        </div>
    </div>
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const boxes = document.querySelectorAll('.box');
            const mainPhoto = document.getElementById('mainPhoto');
    
            boxes.forEach(box => {
                box.addEventListener('mouseenter', function() {
                    // Otherwise, set width of other boxes to 10%
                    boxes.forEach(otherBox => {
                        if (otherBox !== this) {
                            otherBox.style.width = '10%';
                        }
                    });
                    // Set width of current box to 70%
                    this.style.width = '70%';
                });
                box.addEventListener('mouseleave', function() {
                    // Reset width of all boxes to 100%
                    boxes.forEach(otherBox => {
                        otherBox.style.width = '10%';
                        mainPhoto.style.width = '70%'
                    });
                });
            });
        });
    </script>
</body>
<footer>
    <%- include('./partials/footer.ejs') %>
</footer>
</html>